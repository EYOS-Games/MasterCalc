<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/decimalSelectTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="Decimal" />

            <TextView
                android:id="@+id/binarySelectTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Binary" />

            <TextView
                android:id="@+id/OctalSelectTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Octaly" />

            <TextView
                android:id="@+id/HexaSelectTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hexadecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DecimalTxtbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/BinaryTxtBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/OctalTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/hexaTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/aBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Lsh"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Rsh"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="or"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Xor"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="not"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="And"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button16"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text=""
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="mod"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="CE"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="C"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="back"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="/"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/aBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="A"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/bBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="B"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="7"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="8"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="9"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="*"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="C"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/dBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="D"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="4"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="5"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="6"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="-"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/eBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="E"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/fBtn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="F"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="2"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button16"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="("
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text=")"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+_"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="."
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="="
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="214dp" />

        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>